{
  "name": "openstax-tutor",
  "version": "0.0.0",
  "description": "Client for OpenStax Tutor",
  "main": "index.js",
  "scripts": {
    "install": "bower install",
    "test": "browserify --extension='.coffee' --transform browserify-shim --transform cjsxify --outfile ./bundle.js ./index.coffee",
    "start": "rm ./bundle.js; beefy ./index.coffee:bundle.js 8181 --live --index index.html -- --extension='.coffee' --transform browserify-shim --transform cjsxify"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/openstax/tutor-js.git"
  },
  "author": "Philip Schatz <http://philschatz.com>",
  "license": "AGPL3",
  "bugs": {
    "url": "https://github.com/openstax/tutor-js/issues"
  },
  "homepage": "https://github.com/openstax/tutor-js",
  "devDependencies": {
    "backbone": "^1.1.2",
    "bootstrap": "^3.2.0",
    "browserify": "^5.12.0",
    "browserify-shim": "^3.7.0",
    "cjsxify": "^0.2.5",
    "react": "^0.11.2"
  },
  "browser": {
    "jquery": "./bower_components/jquery/dist/jquery.js",
    "bootstrap": "./bower_components/bootstrap/dist/js/bootstrap.js"
  },
  "browserify-shim": {
    "jquery": "$",
    "bootstrap": {
      "depends": [
        "jquery:$"
      ]
    }
  }
}
